<%- include('partials/header') %>

<div class="container-fluid">
    <div class="row">

        <%- include('partials/nav_bar_student.ejs') %>

        <!-- Working console section (reduced width) -->
        <div class="col-md-6 mx-auto" style="background-color: #fff; padding: 30px; border-radius: 8px; overflow-y: auto;">
            <div id="working-console">

                <!-- Jumbotron Section -->
                <div class="jumbotron text-center" style="margin-bottom: 30px;">
                    <h1 style="font-size: 2.5rem; font-weight: bold; color: #333;">Conferences</h1>
                </div>

                <!-- Conferences Table -->
                <div style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-striped table-bordered table-sm" style="margin-bottom: 30px;">
                        <thead class="thead-light">
                            <tr>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Link</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="conference-table-body">
                            <% if (conferences && Array.isArray(conferences.rows)) { %>
                                <% conferences.rows.forEach(function(conference) { %>
                                    <tr data-id="<%= conference.id %>">
                                        <td><%= conference.date %></td>
                                        <td><%= conference.title %></td>
                                        <td><a href="<%= conference.link %>" target="_blank">Link</a></td>
                                        <td>
                                            <button class="btn btn-danger btn-sm delete-btn" data-id="<%= conference.id %>">Delete</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Button to toggle form visibility -->
                <button class="btn btn-info btn-sm" type="button" data-toggle="collapse" data-target="#addConferenceForm" aria-expanded="false" aria-controls="addConferenceForm">
                    Add
                </button>

                <!-- Collapsible Add Conference Form -->
                <div class="collapse" id="addConferenceForm">
                    <h2 class="mt-4">Add Conference</h2>
                    <form id="add-conference-form" class="mb-4">
                        <div class="form-group">
                            <label for="date">Date:</label>
                            <input type="date" id="date" name="date" class="form-control form-control-sm" required>
                        </div>
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" id="title" name="title" class="form-control form-control-sm" required>
                        </div>
                        <div class="form-group">
                            <label for="link">Link:</label>
                            <input type="url" id="link" name="link" class="form-control form-control-sm">
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm">Add Conference</button>
                    </form>
                </div>

            </div>
        </div>

        <%- include('partials/task_mgmt_student.ejs') %>

    </div>
</div>

<style>
    .remove-btn {
        cursor: pointer;
        color: red;
        font-weight: bold;
        margin-left: 10px;
    }

    /* Enhance form and table design */
    h2 {
        font-size: 1.75rem;
        font-weight: bold;
    }

    .table {
        margin-bottom: 30px;
    }

    .table th, .table td {
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
    }

    button {
        padding: 10px 15px;
        border-radius: 5px;
    }

    .delete-btn {
        padding: 5px 10px;
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-info {
        background-color: #464646;
        border-color: #464646;
    }

    .btn-info:hover {
        background-color: #138496;
        border-color: #117a8b;
    }
</style>

<!-- JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function() {
        // Delete conference
        $('#conference-table-body').on('click', '.delete-btn', function() {
            const conferenceId = $(this).data('id');
            $.ajax({
                url: '/student_dashboard/delete_conference',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ conference_id: conferenceId }),
                success: function(response) {
                    alert(response.message);
                    location.reload();
                },
                error: function(error) {
                    alert("Error deleting conference.");
                }
            });
        });

        // Add conference
        $('#add-conference-form').submit(function(e) {
            e.preventDefault();
            const formData = {
                date: $('#date').val(),
                title: $('#title').val(),
                link: $('#link').val()
            };
            $.ajax({
                url: '/student_dashboard/add_conference',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function(response) {
                    alert(response.message);
                    location.reload();
                },
                error: function(error) {
                    alert("Error adding conference.");
                }
            });
        });
    });
</script>

<%- include('partials/footer') %>
