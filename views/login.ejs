<%- include('partials/header') %>

<% if (locals.message) { %>
    <p style="color: red; text-align: center;">
        <%= message %>
    </p>
<% } %>

<div class="jumbotron centered" style="text-align: center; padding: 2rem 1rem; height: 100vh; display: flex; flex-direction: column; justify-content: center;">
    <div class="container">
        <h1 style="font-size: 7.5rem; font-weight: bold; margin-bottom: 2rem;">Login</h1>
        
        <div class="row justify-content-center">
            <div class="col-sm-8 col-md-6 col-lg-4">
                
                <a class="btn btn-dark btn-lg" href="/auth/google" role="button"
                style="font-family: 'Satoshi', sans-serif; font-size: 1rem; padding: 1rem 2rem; border-radius: 0.5rem; color: #ffffff; background-color: #343a40; font-weight: bold; transition: background-color 0.3s; text-decoration: none; align-items: center; justify-content: center">
                <i class="fab fa-google" style="margin-right: 0.5rem;"></i>
                Google Sign-In
            </a>
            
                    
                
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
